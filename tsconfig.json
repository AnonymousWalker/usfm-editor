{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "target": "es6",
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
